<div class="form container" modifier="hide-mobile">
    <form class="form" action="x_form_succes" name="full-form" variant="full-form" novalidate>
        <div class="form unit">
            <div class="label">
                <label class="title">Date</label>
            </div>
            <div class="content container">
                <div class="content unit text">
                    <p>Wich day would you like to organize the event</p>
                </div>
                <div class="content unit">
                    <div class="inputfield container" variant="date" state="">
                        <div class="inputfield unit">
                            <input class="input" variant="overlay full" type="date" id="full" tabindex="-1">
                            <input class="input" variant="number dateselector day" modifier="text-center" name="date-day" maxlength="2" min="1" max="31" step="1" data-nextfield="input-date-month" type="text" placeholder="DD" pattern="\d*" data-required="true" data-value-check="number" />
                            <input class="input" variant="number dateselector month" modifier="text-center" name="date-month" maxlength="2" min="1" max="12" step="1" id="input-date-month" data-nextfield="input-date-year" type="text" placeholder="MM" pattern="\d*" data-required="true" data-value-check="number" />
                            <input class="input" variant="number dateselector year" modifier="text-center" name="date-year" maxlength="2" min="0" max="99" step="1" id="input-date-year" data-nextfield="input-guests" type="text" placeholder="YY" pattern="\d*" data-required="true" data-value-check="number" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form unit">
            <div class="label">
                <label class="title">Guests</label>
            </div>
            <div class="content container">
                <div class="content unit text">
                    <p>How many people will be attending the event (max 850)</p>
                </div>
                <div class="content unit">
                    <div class="inputfield container">
                        <div class="inputfield unit">
                            <input id="input-guests" class="input" variant="number small" modifier="text-center" name="guests" maxlength="3" min="0" max="850" step="1" type="text" placeholder="000" pattern="\d*" data-required="true" data-value-check="numberMax850" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form unit">
            <div class="label">
                <label class="title">
                    Event<br />
                    Rooms
                </label>
            </div>
            <div class="content container">
                <div class="content unit">
                    <div class="content unit column-left">
                        <div class="checkbox container">
                            <div class="checkbox unit">
                                <input id="koelschip" name="eventrooms" value="koelschip" class="input" type="checkbox" />
                                <label for="koelschip">
                                    <span></span>
                                    Koelschip
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="molenzolder" name="eventrooms" value="molenzolder" class="input" type="checkbox" />
                                <label for="molenzolder">
                                    <span></span>
                                    Molenzolder
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="moutzolder" name="eventrooms" value="moutzolder" class="input" type="checkbox" />
                                <label for="moutzolder">
                                    <span></span>
                                    Moutzolder
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="content unit column-right">
                        <div class="checkbox container">
                            <div class="checkbox unit">
                                <input id="hopzolder" name="eventrooms" value="hopzolder" class="input" type="checkbox" />
                                <label for="hopzolder">
                                    <span></span>
                                    Hopzolder
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="brouwerskamer" name="eventrooms" value="brouwerskamer" class="input" type="checkbox" />
                                <label for="brouwerskamer">
                                    <span></span>
                                    Brouwerskamer
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form unit">
            <div class="label">
                <label class="title">
                    Event<br />
                    type
                </label>
            </div>
            <div class="content container">
                <div class="content unit">
                    <div class="content unit text">
                        <p>What would you like to host</p>
                    </div>
                    <div class="content unit column-left">
                        <div class="checkbox container">
                            <div class="checkbox unit">
                                <input id="meeting" name="eventtype" value="meeting" class="input" type="checkbox" />
                                <label for="meeting">
                                    <span></span>
                                    Meeting
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="reception" name="eventtype" value="reception" class="input" type="checkbox" />
                                <label for="reception">
                                    <span></span>
                                    Reception
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="drinks" name="eventtype" value="drinks" class="input" type="checkbox" />
                                <label for="drinks">
                                    <span></span>
                                    Drinks
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="party" name="eventtype" value="party" class="input" type="checkbox" />
                                <label for="party">
                                    <span></span>
                                    Party
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="presentation" name="eventtype" value="presentation" class="input" type="checkbox" />
                                <label for="presentation">
                                    <span></span>
                                    Presentation
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="content unit column-right">
                        <div class="checkbox container">
                            <div class="checkbox unit">
                                <input id="diner" name="eventtype" value="diner" class="input" type="checkbox" />
                                <label for="diner">
                                    <span></span>
                                    Diner
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="lunch" name="eventtype" value="lunch" class="input" type="checkbox" />
                                <label for="lunch">
                                    <span></span>
                                    Lunch
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="training" name="eventtype" value="training" class="input" type="checkbox" />
                                <label for="training">
                                    <span></span>
                                    Training
                                </label>
                            </div>
                            <div class="checkbox unit">
                                <input id="workshop" name="eventtype" value="workshop" class="input" type="checkbox" />
                                <label for="workshop">
                                    <span></span>
                                    Workshop
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form unit">
            <div class="label">
                <label class="title">Contact</label>
            </div>
            <div class="content container">
                <div class="content unit text">
                    <p>How can we contact you</p>
                </div>
                <div class="content unit">
                    <div class="inputfield container">
                        <div class="inputfield unit">
                            <input class="input" variant="text" type="text" name="company" placeholder="Company*" data-required="true" />
                        </div>
                        <div class="inputfield unit">
                            <input class="input" variant="text" type="text" name="name" placeholder="Your name*" data-required="true" data-value-check="alphabetic" />
                        </div>
                        <div class="inputfield unit">
                            <input class="input" variant="text" type="tel" name="phone" pattern="^(?:\+\d{1,3}|0\d{1,3}|00\d{1,2})?(?:\s?\(\d+\))?(?:[-\/\s.]|\d)+$" placeholder="Phone number*" data-required="true" />
                        </div>
                        <div class="inputfield unit">
                            <input class="input" variant="email" type="email" name="email" placeholder="E-mail address*" data-required="true" />
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="form unit">
            <div class="content container">
                <div class="content unit text">
                    <p>Additional comments</p>
                </div>
                <div class="content unit">
                    <div class="textarea-block container">
                        <div class="textarea-block unit">
                            <textarea class="textarea" name="additional" placeholder="Comment or question"></textarea>
                        </div>
                    </div>
                </div>

                <div class="recaptcha container">
                    <div class="recaptcha unit">
                        <div 
                            id="b97d3414-f7f8-4a9b-97e3-9bdb3e05430f" 
                            class="g-recaptcha" 
                            data-size="normal"
                            data-callback="recaptchaCallback" 
                            data-sitekey="6Lf-eB8UAAAAAG87IafpBAGawUyY_5ADfqXSOQAK"></div>
                    </div>
                </div>

            </div>
        </div>

        <div class="form unit" variant="error-message" state="hidden">
            <div class="content container">
                <div class="content unit text">
                    <p>Not all required fields are filled in correctly</p>
                </div>
            </div>
        </div>

        <div class="form unit">
            <div class="content container">
                <div class="content unit">
                    <div class="button container">
                        <div class="button unit">
                            <button class="submit-button shared-button" modifiers="color4 size1">
                                <span class="multiplelines">Send request</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>